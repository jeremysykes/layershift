{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "vite.config.ts", "vite.config.component.ts", "vitest.config.ts", "playwright.config.ts"],
  "exclude": [
    "src/components/layershift/wrappers/react.tsx",
    "src/components/layershift/wrappers/angular.ts",
    "src/components/layershift/wrappers/vue.vue",
    "src/components/layershift/wrappers/Svelte.svelte",
    "src/components/layershift/wrappers/vanilla.js",
    "src/components/layershift/global.d.ts"
  ]
}
